# --- Airflow container user mapping (avoid permission issues on macOS) ---
# Tip: if 50000 doesnâ€™t work for you, set AIRFLOW_UID to your real uid (run: id -u) and restart.
AIRFLOW_UID=50000
AIRFLOW_GID=0

# --- Create admin user on init (optional) ---
_AIRFLOW_WWW_USER_CREATE=True
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin
_AIRFLOW_WWW_USER_FIRSTNAME=Admin
_AIRFLOW_WWW_USER_LASTNAME=User
_AIRFLOW_WWW_USER_EMAIL=you@example.com

# --- ImmoEliza paths (used by Airflow + Streamlit) ---
IMMOELIZA_ANALYTICS_PATH=/opt/airflow/analytics/immoeliza.duckdb
IMMOELIZA_MODELS_DIR=/opt/airflow/models

# --- Your scraper configuration (preserved) ---
IMMO_TOWNS_CSV=./data/immovlan_towns_to_scrape.csv
IMMO_DATA_ROOT=./data
IMMO_HEADLESS=false
IMMO_MAX_PAGES=-1
IMMO_LOG_LEVEL=INFO

# driver: selenium (default). You can try uc later.
IMMO_DRIVER=selenium
IMMO_USE_SELENIUM_WIRE=false

IMMO_SCRAPE_USER_AGENT=Mozilla/5.0 (Macintosh; Intel Mac OS X 14_5) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/139.0.0.0 Safari/537.36
IMMO_ACCEPT_LANGUAGE=en-US,en;q=0.9,nl;q=0.8,fr;q=0.7

IMMOVLAN_APARTMENTS_BASE_URL_TEMPLATE=https://www.immovlan.be/en/real-estate/for-sale/apartment?search={town}
IMMOVLAN_HOUSES_BASE_URL_TEMPLATE=https://www.immovlan.be/en/real-estate/for-sale/house?search={town}

# --- Optional: if you run Selenium via a remote container (see note below) ---
# IMMO_SELENIUM_REMOTE_URL=http://selenium:4444/wd/hub
